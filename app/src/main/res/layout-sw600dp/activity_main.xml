<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:divider="?android:attr/listDivider"
    android:showDividers="middle"
    android:padding="@dimen/border_padding"
    android:id = "@+id/linearLayout"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/listFragment"
        android:name="tw.edu.ncku.iim.yhjiang.ituneplayer.YoutubeListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_youtube_list" />

    <fragment
        android:id="@+id/previewFragment"
        android:name="tw.edu.ncku.iim.yhjiang.ituneplayer.YoutubePreviewFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_youtube_preview" />

</LinearLayout>